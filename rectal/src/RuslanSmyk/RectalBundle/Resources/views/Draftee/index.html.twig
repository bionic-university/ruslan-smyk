{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Draftee list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Patronymic</th>
                <th>Address</th>
                <th>Birthday</th>
                <th>Inn</th>
                <th>Passport</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('draftee_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.patronymic }}</td>
                <td>{{ entity.address }}</td>
                <td>{% if entity.birthday %}{{ entity.birthday|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.inn }}</td>
                <td>{{ entity.passport }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('draftee_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('draftee_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('draftee_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
